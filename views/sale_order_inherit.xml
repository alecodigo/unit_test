<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="sale_order_inherit_view" model="ir.ui.view">
        <field name="name">sale_order_inherit_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="replace">
                <group col="2">
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <button string="Create Variant" name="variante" type="object" class="btn-primary" context="{'child': True}" attrs="{'invisible': [('child', '=', True)]}"/>
                </group>
            </xpath>
            <xpath expr="//group/group" position="inside">
                <field name="parent_id" domain="[('child', '=', False)]" attrs="{'required': [('child', '=', True)]}"/>
                <field name="child"/>
            </xpath>
        </field>
    </record>

</odoo>
